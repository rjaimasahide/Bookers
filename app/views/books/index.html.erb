<h1>BOOKS</h1>
<table>
  <tr><th>Title</th><th>Body</th><th colspan="3"></th></tr>
  <% @books.each do |book| %>
  <tr><td><%= book.title %></td><td><%= book.body %></td>
  <td><%= link_to "show", book_path(book.id) %></td>
  <td><%= link_to "edit", edit_path(book.id) %></td>
  <td><%= link_to "destroy", destroy_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr>
  <% end %>
</table>

<h2>new book</h2>
<%= form_with model: @book,url:'/books',method: :post do |f| %>
  <h1>Title</h1>
  <%= f.text_field :title %>
  <h2>Body</h2>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

