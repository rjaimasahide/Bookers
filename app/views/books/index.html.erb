<h1>BOOKS</h1>
<table>
  <tr><th>Title</th><th>Body</th><th colspan="3"></th></tr>
  <% @books.each do |book| %>
  <tr><td><%= book.title %></td><td><%= book.body %></td>
  <% end %>
  <td><%= link_to "show",books_path(@book.id) %></td><td>edit</td><td>destroy</td></tr>
  
</table>

<h2>new book</h2>
<%= form_with model: @book,url:'/books',method: :post do |f| %>
  <h1>Title</h1>
  <%= f.text_field :title %>
  <h2>Body</h2>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

